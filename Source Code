#Function for purchasing Economy Class and print into Ticket file
def E1():
    while True:
        col = input("Please insert the column from 1 to 5 = ")
        row = input("Please insert the row from 1 to 8 = ")
        try:
            val = int(col)
            val = int(row)
            break
        except ValueError:
            print("Invalid input")
    while True:
        col = int(col)
        row = int(row)
        if(col >= 1)and(col <= 5):
            if(row >= 1)and(row <= 8):
                col = col - 1
                row = row - 1
                if(listE1[row][col] == 0):
                    listE1[row][col] = 1
                    economy()
                    for i in range(8):
                        print(" ",i+1,"-",listE1[i])
                    col = col+1
                    row = row+1
                    col = str(col)
                    row = str(row)
                    file = open("Tickets.txt","a")
                    
                    name = input("Enter your name : ")
                    
                    file.write("\n")
                    file.write("Name        : ")
                    file.write(name)
                    file.write("\n")
                    file.write("Ferry ID    : 001\n")
                    file.write("Source      : Penang\n")
                    file.write("Destination : Langkawi\n")
                    file.write("Date        : ")
                    file.write(Date)
                    file.write("\n")
                    file.write("Time        : 10:00a.m.\n")
                    file.write("Terminal    : Gate A\n")
                    file.write("ECONOMY CLASS\n")
                    file.write("Col : ")
                    file.write(col+"\n")
                    file.write("Row : ")
                    file.write(row+"\n")
                    file.write("\n")
                    file.write("-------------------------- \n")
                    
                    file.close()

                    print("You have purchased a ticket ")
                    fid="001"
                    fromto="From Penang to Langkawi"
                    triptime="10:00a.m."
                    seatclass="Economy class"
                    ticketdetails(name,fid,fromto,triptime,seatclass,col,row)
                    print("Please check the file for ticket details")
                    break
                else:
                    print(seattakenmsg)
                    E1()
                    break
            else:
                print("invalid input")
                E1()
                break
        else:
            print("invalid input")
            E1()
            break
