#print for the available time of each ferry
def Ferry_ID():
    print("\n    Penang --> Langkawi")
    print("    Ferry ID \t\t    Time") 
    print("      001       ------    10:00a.m.")
    print("      002       ------    12:00p.m.")
    print("      003       ------    02:00p.m.")
    print("      004       ------    04:00p.m.")
    print("")
    print("    Langkawi --> Penang")
    print("    Ferry ID \t\t    Time") 
    print("      005       ------    11:00a.m.")
    print("      006       ------    01:00p.m.")
    print("      007       ------    03:00p.m.")
    print("      008       ------    05:00p.m.")

#print for the Trip time and corresponding ferryID
def trip_time():
    print("\n    Penang --> Langkawi")
    print("    Ferry ID \t\t    Time") 
    print("      10:00a.m.       ------    Ferry001")
    print("      12:00p.m.       ------    Ferry002")
    print("      02:00p.m.       ------    Ferry003")
    print("      04:00p.m.       ------    Ferry004")
    print("")
    print("    Langkawi --> Penang")
    print("    Ferry ID \t\t    Time") 
    print("      11:00a.m.       ------    Ferry005")
    print("      01:00p.m.       ------    Ferry006")
    print("      03:00p.m.       ------    Ferry007")
    print("      05:00p.m.       ------    Ferry008")
    
#print submenu and ask user to insert input for purchase ticket for business or economy class or return to main menu
def SubMenu():
    print('''
    PURCHASING MODULE
    B – to purchase ticket for Business class
    E – to purchase ticket for Economy class
    M – to return to Main Menu''')

#choice of seat in business class    
    while True:
        WE = input("\n    Please select option from above: ")
        if(WE == "B") or (WE == "b"):
            print("\n    BUSINESS CLASS")
            load()
            Ferry_ID()
            Ferry_No = input("\n    Please select Ferry ID from 001 to 008: ")
            if(Ferry_No == "001" or Ferry_No == "1"):
                if(listB1 != [[1 for j in range(cols)]for i in range(Brows)]):
                    print("")
                    print("       Ferry ID : 001")
                    print("--------------------------")
                    business()
                    for i in range(2):
                        print(" ",i+1,"-",listB1[i])
                    print("--------------------------")
                    B1()
                elif(listB1 == [[1 for j in range(cols)]for i in range(Brows)])and(listE1 == [[1 for j in range(cols)]for i in range(Erows)]):
                    print("The Ferry is full")
                else:
                    print(bsrymsg)
                    REV = input()
                    if(REV != "E")and(REV != "e")and(REV != "M")and(REV != "m"):
                        print("invalid input")
                    if(REV == "E")or(REV == "e"):
                        print("")
                        print("       Ferry ID : 001")
                        print("--------------------------")
                        economy()
                        for i in range(8):
                            print(" ",i+1,"-",listE1[i])
                        print("--------------------------")
                        E1()
                    if(REV == "M")or(REV == "m"):
                        print("Next trip leaves in 2 hours")
                        break
                    break                       
                break
            if(Ferry_No == "002" or Ferry_No == "2"):
                if(listB2 != [[1 for j in range(cols)]for i in range(Brows)]):
                    print("")
                    print("       Ferry ID : 002")
                    print("--------------------------")
                    business()
                    for i in range(2):
                        print(" ",i+1,"-",listB2[i])
                    print("--------------------------")
                    B2()
                elif(listB2 == [[1 for j in range(cols)]for i in range(Brows)])and(listE2 == [[1 for j in range(cols)]for i in range(Erows)]):
                    print("The Ferry is full")
                else:
                    print(bsrymsg)
                    REV = input()
                    if(REV != "E")and(REV != "e")and(REV != "M")and(REV != "m"):
                        print("invalid input")
                    if(REV == "E")or(REV == "e"):
                        print("       Ferry ID : 002")
                        print("--------------------------")
                        economy()
                        for i in range(8):
                            print(" ",i+1,"-",listE2[i])
                        print("--------------------------")
                        E2()
                    if(REV == "M")or(REV == "m"):
                        break
                    break                       
                break
            if(Ferry_No == "003" or Ferry_No == "3"):
                if(listB3 != [[1 for j in range(cols)]for i in range(Brows)]):
                    print("")
                    print("       Ferry ID : 003")
                    print("--------------------------")
                    business()
                    for i in range(2):
                        print(" ",i+1,"-",listB3[i])
                    print("--------------------------")
                    B3()
                elif(listB3 == [[1 for j in range(cols)]for i in range(Brows)])and(listE3 == [[1 for j in range(cols)]for i in range(Erows)]):
                    print(bsrymsg)
                    REV = input()
