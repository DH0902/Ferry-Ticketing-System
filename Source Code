#Function for printing the seat of each Ferry ID
def F1():
    print("--------------------------")
    print("       Ferry ID : 001")
    print("--------------------------")
    print("   Date:",Date)
    print("--------------------------")
    print("    Penang to Langkawi")
    print("--------------------------")
    business()
    for i in range(2):
        print("  ",i+1,"-",listB1[i])
    print("--------------------------")
    economy()
    for i in range(8):
        print("  ",i+1,"-",listE1[i])
    print("--------------------------")

