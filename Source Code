import time
import datetime

#Datetime format
dateformat=str("%d %B %Y")
Date=datetime.date.today().strftime(dateformat)

#print top of ticket's stamp in Tickets file
file = open("Tickets.txt","a")

file.write("----------------------")
file.write("\n")
file.write("TICKET\t")
file.write(Date)
file.write("\n")

file.close()

#Specify the rows(Business and Economy class) and columns number
Brows = 2
Erows = 8
cols = 5
listB1 = [[0 for j in range(cols)]for i in range(Brows)]
listB2 = [[0 for j in range(cols)]for i in range(Brows)]
listB3 = [[0 for j in range(cols)]for i in range(Brows)]
listB4 = [[0 for j in range(cols)]for i in range(Brows)]
listB5 = [[0 for j in range(cols)]for i in range(Brows)]
listB6 = [[0 for j in range(cols)]for i in range(Brows)]
listB7 = [[0 for j in range(cols)]for i in range(Brows)]
listB8 = [[0 for j in range(cols)]for i in range(Brows)]

listE1 = [[0 for j in range(cols)]for i in range(Erows)]
listE2 = [[0 for j in range(cols)]for i in range(Erows)]
listE3 = [[0 for j in range(cols)]for i in range(Erows)]
listE4 = [[0 for j in range(cols)]for i in range(Erows)]
listE5 = [[0 for j in range(cols)]for i in range(Erows)]
listE6 = [[0 for j in range(cols)]for i in range(Erows)]
listE7 = [[0 for j in range(cols)]for i in range(Erows)]
listE8 = [[0 for j in range(cols)]for i in range(Erows)]

#Error message
esrymsg=str("The Economy Class is full \nAre you acceptable to be changed in the Business Class ?\nPress 'B' to purchase ticket for Business class\nPress 'M' to return Main Menu")
bsrymsg=str("The Business Class is full \nAre you acceptable to be changed in the Economy Class ?\nPress 'E' to purchase ticket for Economy class\nPress 'M' to return Main Menu")
seattakenmsg=str("The seat had been taken, please choose another seat.")



#print loading 
def load():
    print("\n           Loading")
    for p in range(3):
        time.sleep(0.4)
        print("              .")
        
def business():
    print('''       BUSINESS CLASS
--------------------------
       1  2  3  4  5''')
def economy():
    print('''      ECONOMY CLASS"
--------------------------"
       1  2  3  4  5''')

#print ticket after purchase
def ticketdetails(name,fid,fromto,triptime,seatclass,col,row):
    print("\n Here is your ticket details:\n")
    print("*"*35)
    print("Name \t\t:",name)
    print("Ferry ID \t:",fid)
    print("Date \t\t:",Date)
    print("Trip time \t:",triptime)
    print(fromto)
    print(seatclass, "Row ",row, " Column ", col)
    print("*"*35)
    print("\nRedirecting back to Main menu in 10 seconds")
    time.sleep(10)
    print("\n")



#Function for purchasing business class ticket and print into the Tickets file
def B1():
    while True:
        col = input("Enter column from 1 to 5 = ")
        row = input("Enter row from 1 to 2 = ")
        try:
            val = int(col)
            val = int(row)
            break
        except ValueError:
            print("Invalid Option!")
    while True:
        col = int(col)
        row = int(row)
        if(col >= 1) and (col <= 5):
            if(row >= 1) and (row <= 2):
                col = col - 1
                row = row - 1
                if(listB1[row][col] == 0):
                    listB1[row][col] = 1
                    business()
                    for i in range(2):
                        print(" ",i+1,"-",listB1[i])
                    col = col+1
                    row = row+1
                    col = str(col)
                    row = str(row)
                    file = open("Tickets.txt","a")
                    
                    name = input("Enter your name : ")
                    
                    file.write("\n")
                    file.write("Name        : ")
                    file.write(name)
                    file.write("\n")
                    file.write("Ferry ID    : 001\n")
                    file.write("Source      : Penang\n")
                    file.write("Destination : Langkawi\n")
                    file.write("Date        : ")
                    file.write(Date)
                    file.write("\n")
                    file.write("Time        : 10:00a.m.\n")
                    file.write("Terminal    : Gate A\n")
                    file.write("BUSINESS CLASS\n")
                    file.write("Col : ")
                    file.write(col+"\n")
                    file.write("Row : ")
                    file.write(row+"\n")
                    file.write("\n")
                    file.write("-------------------------- \n")
                    
                    file.close()

                    print("You have purchased a ticket ")
                    fid="001"
                    fromto="From Penang to Langkawi"
                    triptime="10:00a.m."
                    seatclass="Business class"
                    ticketdetails(name,fid,fromto,triptime,seatclass,col,row)
                    print("Please check the file for ticket details")
                    break
                else:
                    print(seattakenmsg)
                    B1()
                    break
            else:
                print("invalid input")
                B1()
                break
        else:
            print("invalid input")
            B1()
            break
