def E4():
    while True:
        col = input("Please insert the column from 1 to 5 = ")
        row = input("Please insert the row from 1 to 8 = ")
        try:
            val = int(col)
            val = int(row)
            break
        except ValueError:
            print("Invalid input")
    while True:
        col = int(col)
        row = int(row)
        if(col >= 1)and(col <= 5):
            if(row >= 1)and(row <= 8):
                col = col - 1
                row = row - 1
                if(listE4[row][col] == 0):
                    listE4[row][col] = 1
                    economy()
                    for i in range(8):
                        print(" ",i+1,"-",listE4[i])
                    col = col+1
                    row = row+1
                    col = str(col)
                    row = str(row)
                    file = open("Tickets.txt","a")
                    
                    name = input("Enter your name : ")
                    
                    file.write("\n")
                    file.write("Name        : ")
                    file.write(name)
                    file.write("\n")
                    file.write("Ferry ID    : 004\n")
                    file.write("Source      : Penang\n")
                    file.write("Destination : Langkawi\n")
