#print main menu and ask for input    
def MainMenu():
    while True:
        print("          Main Menu")
        print('''
    FERRY TICKETING SYSTEM
    P – to Purchase Ticket
    V – to View Seating Arrangement
    Q – to Quit the system''')
        
#open sub menu for purchasing ticket    
        QW = input("\n    Please select option from above: ")
        if(QW == "P") or (QW == "p"):
            load()
            SubMenu()
            
#print for viewing seat arrangement
        elif(QW == "V") or (QW == "v"):
            load()
            print("    SEATING ARRANGEMENT MODULE")
            print("\n    F - to select Ferry ID")
            print("    T - to select Trip Time")

            Option = input("\n    Please select option from above: ")
            if(Option == "F" or Option=="f"):
                Ferry_ID()
                FerryID = input("\n    Please select Ferry ID from 001 to 008: ")
                if(FerryID == "001" or FerryID == "1"):
                    load()
                    F1()
                elif(FerryID == "002" or FerryID == "2"):
                    load()
                    F2()
                elif(FerryID == "003" or FerryID == "3"):
                    load()
                    F3()
                elif(FerryID == "004" or FerryID == "4"):
                    load()
                    F4()
                elif(FerryID == "005" or FerryID == "5"):
                    load()
                    F5()
                elif(FerryID == "006" or FerryID == "6"):
                    load()
                    F6()
                elif(FerryID == "007" or FerryID == "7"):
                    load()
                    F7()
                elif(FerryID == "008" or FerryID == "8"):
                    load()
                    F8()
                else:
                    print("Invalid Option!\n")
                print("")
        
            elif(Option == "T" or Option=="t"):
                trip_time()
                Time_option = input("\n    Please select departure time, only the hour in 2 digits : ")
                
                if(Time_option == "10"):
                    load()
                    F1()
                elif(Time_option == "12"):
                    load()
                    F2()
                elif(Time_option == "02"):
                    load()
                    F3()
                elif(Time_option == "04"):
                    load()
                    F4()
                elif(Time_option == "11"):
                    load()
                    F5()
                elif(Time_option == "01"):
                    load()
                    F6()
                elif(Time_option == "03"):
                    load()
                    F7()
                elif(Time_option == "05"):
                    load()
                    F8()
                else:
                    print("Invalid Option!\n")
            else:
                print("Invalid Option!\n")
        
#Exit the program
        elif(QW == "Q") or (QW == "q"):
            print("\n    The program is going to end and all data will be lost.")
            quitask=str(input("    Confirm to exit?\n    Enter Y to confirm exit."))
            if(quitask=="Y" or quitask=="y"):
                print("    Exiting the program.\t")
                time.sleep(3)
                break
            else:
                print("    The program will continue running.")

        else:
            print("    Invalid Option!")
            
            
       
MainMenu()
